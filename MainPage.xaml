<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab10.MainPage">

    <StackLayout Padding="10">
        <Image Source="book1.jpg" WidthRequest="100" HeightRequest="100" />
        <Label Text=" Peruzal" HorizontalOptions="Center" TextColor="Green" />
        <Entry x:Name="txt1" Placeholder="Username" Keyboard="Email" />
        <Entry x:Name="txt2" Placeholder="Password" IsPassword="true" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Login" Clicked="Button_Clicked"  HorizontalOptions="FillAndExpand" BackgroundColor="Orange" TextColor="White"/>
            <Button Text="Register" HorizontalOptions="FillAndExpand" BackgroundColor="Gray" TextColor="White" />
        </StackLayout>
        <Label Text="Terms and Conditions" TextColor="Gray" HorizontalOptions="Center" VerticalOptions="EndAndExpand" />
    </StackLayout>


</ContentPage>
